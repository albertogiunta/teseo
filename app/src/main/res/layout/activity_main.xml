<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jaus.albertogiunta.teseo.MainActivity"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp"
        >

    <Button
            android:text="Connect to system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnConnect"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/drawView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.503"
            />

    <com.jaus.albertogiunta.teseo.util.DrawView
            android:id="@+id/drawView"
            app:shapeColor="#7f0000"
            android:layout_width="360dp"
            android:layout_height="229dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteX="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            />

    <ImageButton
            android:id="@+id/btnUp"
            android:src="@drawable/btn_selector"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnDown"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    <ImageButton
            android:id="@+id/btnRight"
            android:src="@drawable/btn_selector"
            android:background="@android:color/transparent"
            android:rotation="90"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnUp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/btnDown"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.5"
            />

    <ImageButton
            android:id="@+id/btnDown"
            android:src="@drawable/btn_selector"
            android:background="@android:color/transparent"
            android:rotation="180"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    <ImageButton
            android:id="@+id/btnLeft"
            android:src="@drawable/btn_selector"
            android:background="@android:color/transparent"
            android:rotation="-90"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnDown"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnUp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            />

    <Button
            android:text="A to B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRoute"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/drawView"
            app:layout_constraintVertical_bias="0.503"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            />
    <Button
            android:text="QR Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnQRCode"
            app:layout_constraintRight_toLeftOf="@+id/btnRoute"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/drawView"
            app:layout_constraintLeft_toRightOf="@+id/btnConnect"
            android:layout_marginLeft="8dp"
            app:layout_constraintVertical_bias="0.507"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            />
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_end="-155dp"
            />
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_begin="-14dp"
            android:orientation="horizontal"
            />
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_begin="-154dp"
            android:orientation="horizontal"
            />


</android.support.constraint.ConstraintLayout>
